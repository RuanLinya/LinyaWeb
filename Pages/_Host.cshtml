@page "/"
@namespace LinyaWebServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Professional Résumé &amp; Portfolio</title>
    <!--
      The Google Font and custom stylesheet are loaded from the application’s
      wwwroot folder.  These resources mirror the original static site and
      provide the same look and feel when running under Blazor Server.
    -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="css/style.css" />
    <base href="~/" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>
    <!--
      The custom JavaScript file implements client‑side interactivity such as
      the mobile navigation toggle, portfolio filtering, contact form
      validation and dynamic year display.  It operates on the DOM of the
      Razor component rendered below.  The Blazor framework script is loaded
      afterwards to enable server‑side interactivity.
    -->
    <script src="script.js"></script>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>